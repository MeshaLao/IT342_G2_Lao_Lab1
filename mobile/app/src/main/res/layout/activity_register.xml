<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bazaar_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Logo Circle with Gold Ring -->
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp">

            <!-- Gold Ring -->
            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                app:cardCornerRadius="70dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#fecd6d"/>

            <!-- Inner Circle -->
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardCornerRadius="60dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="#E8E4C9">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo"
                    android:contentDescription="Logo"/>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MINI APP"
            android:textSize="12sp"
            android:textColor="#fecd6d"
            android:letterSpacing="0.3"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <!-- Card Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="200dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="#DD000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="CREATE ACCOUNT"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Become a member now!"
                    android:textSize="14sp"
                    android:textColor="#E8E4C9"
                    android:alpha="0.8"
                    android:textStyle="italic"
                    android:layout_marginBottom="32dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USERNAME"
                    android:textSize="11sp"
                    android:textColor="#fecd6d"
                    android:textStyle="bold"
                    android:letterSpacing="0.2"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#fecd6d"
                    app:boxBackgroundColor="#22000000">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/usernameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e.g. mesha_lao"
                        android:textColor="#E8E4C9"
                        android:textColorHint="#80E8E4C9"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMAIL"
                    android:textSize="11sp"
                    android:textColor="#fecd6d"
                    android:textStyle="bold"
                    android:letterSpacing="0.2"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#fecd6d"
                    app:boxBackgroundColor="#22000000">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="you@campus.edu"
                        android:inputType="textEmailAddress"
                        android:textColor="#E8E4C9"
                        android:textColorHint="#80E8E4C9"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PASSWORD"
                    android:textSize="11sp"
                    android:textColor="#fecd6d"
                    android:textStyle="bold"
                    android:letterSpacing="0.2"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#fecd6d"
                    app:boxBackgroundColor="#22000000">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Min. 6 characters"
                        android:inputType="textPassword"
                        android:textColor="#E8E4C9"
                        android:textColorHint="#80E8E4C9"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONFIRM PASSWORD"
                    android:textSize="11sp"
                    android:textColor="#fecd6d"
                    android:textStyle="bold"
                    android:letterSpacing="0.2"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#fecd6d"
                    app:boxBackgroundColor="#22000000">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirmPasswordInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Re-enter password"
                        android:inputType="textPassword"
                        android:textColor="#E8E4C9"
                        android:textColorHint="#80E8E4C9"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="CREATE ACCOUNT â†’"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:backgroundTint="#fecd6d"
                    android:textColor="#70191d"
                    app:cornerRadius="12dp"/>

                <TextView
                    android:id="@+id/goToLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Already have an account? Sign In"
                    android:textColor="#fecd6d"
                    android:layout_marginTop="24dp"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:indeterminateTint="#fecd6d"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>